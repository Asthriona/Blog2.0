<div class="form-group">
    <label for="title" class="mt-2">Title</label>
    <input required type="text" name="title" id="title" placeholder="Title" value="<%= article.title %>" class="form-control">
    <label for="Description" class="mt-2">Description</label>
    <textarea required name="description" id="description" class="form-control"><%= article.description %></textarea>
    <label for="markdown" class="mt-2">Markdown</label>
    <textarea required name="markdown" id="markdown" cols="10" rows="10" class="form-control"> <%= article.markdown %></textarea>
    <label for="img">Image</label>
    <input type="text" name="img" id="img" value="<%= article.img %>" required class="form-control">
    <label for="hidden">Hidden?</label>
    <input type="checkbox" name="hidden" id="hidden">

</div>
<a href="/back" class="btn btn-outline-primary">Cancel</a>
<button class="btn btn-outline-primary" type="submit">Save</button>